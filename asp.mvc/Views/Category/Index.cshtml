@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-right">
                <i class="bi bi-plus-circle pt-1">&nbsp;Create New Category</i>
            </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped mt-3" style="width: 100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Display Order</th>
            <th>Edit</th>
        <tr/>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td style="width: 10%">@item.Id</td>
            <td class="cell-width">@item.Name</td>
            <td style="width: 20%">@item.DisplayOrder</td>
            <td class="w-100 btn-group" role="group">
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id"
                   class="btn btn-primary mx-2">
                    <i class="bi bi-pencil-square"></i> Edit
                </a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"
                   class="btn btn-danger mx-2">
                    <i class="bi bi-trash"></i> Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>