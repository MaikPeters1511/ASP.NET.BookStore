@model Category
@{
ViewData["Title"] = "Delete Category";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input hidden="hidden" asp-for="Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr/>
        </div>
        <div class="form-group mt-2 mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" disabled="disabled"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="DisplayOrder" class="control-label"></label>
            <input asp-for="DisplayOrder" disabled="disabled" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary" style="width: 150px">Delete</button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary m-lg-2" style="width: 150px">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
@{
<partial name="_ValidationScriptsPartial"/>
}
}